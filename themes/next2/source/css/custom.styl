// 滚动条
::-webkit-scrollbar{width:6px;height:6px}
::-webkit-scrollbar-thumb{background:rgba(0,0,0,0.2);border-radius:5px;box-shadow:inset 0 0 5px rgba(0,0,0,0.2);}
::-webkit-scrollbar-track{background:rgba(0,0,0,0.01);border-radius:0;box-shadow:inset 0 0 5px rgba(0,0,0,0.2);}

@media (min-width: 992px){
  // body 处理
  .body-class{
    top: 0 !important;
    background: url(https://api.ixiaowai.cn/gqapi/gqapi.php);
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-position: 50% 50%;
    background-size: cover;
  }
}

